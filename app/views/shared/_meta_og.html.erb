<% content_for :og do %>
    <meta name="description" content="givemebite!咬我啊！美食分享～！"/>
    <meta name="keywords" content="givemebite,咬我啊">

  	<meta property="fb:app_id" content="1505138316410533"/>
    <meta property="og:image:width" content="500"/>
    <meta property="og:image:height" content="500"/>
    
	<% if @user %>
      <meta property="og:title" content="<%= "#{@user.nickname} - givemebite.me" %>"/>
      <meta property="og:image" content="<%= "#{root_url}#{@user.avatar_url(:medium)[1..-1]}" %>"/>
  <% else %>
      <meta property="og:title" content="<%= "givemebite.me" %>"/>
  <% end %>

    <meta property="og:type" content="website"/>
    <meta property="og:url" content="<%= request.original_url %>"/>

  <% if @favorite %>
    <meta property="og:image" content="<%= root_url+@favorite.pic.url(:original)[1..-1] %>"/>
  <% end %>
  <% if current_page?(root_url) %>
    <meta property="og:image" content="<%= root_url %>assets/givemebite_b.jpg"/>
  <% end %>

    <meta property="og:image" content="<%= root_url %>assets/givemebite_a.jpg"/>
    
    <meta property="og:description" content="老饕的最愛，美食分享，咬我啊！"/>
    <meta property="og:site_name" content="givenebite-咬我啊"/>
    <link rel="canonical" href="<%= request.original_url %>"/>
<% end %>