
<header>
	<div>
		<%= form_tag root_path, {:method => :get ,:id => "findNear"} do %>
		  <input id="center" name="c" type="text" placeholder="搜尋中心點">
		  <input id="distance" type="number" min="0" max="500" name="d" placeholder="距離(km)">
		  <label class="fa fa-search" >
		  	<input type="submit" value="送出">
		  </label>
		<% end %>
		<%= link_to "GiveMeBite!", root_path, class: "logo" %>
		<nav>
			<ul>
				<% if signed_in? %>				
					<li><%= link_to current_user.nickname, bite_path(current_user) %> 你好！</li>
				<% end %>

				<li><%= link_to "首頁", root_path %></li>

				<% if signed_in? %>
					<li><%= link_to "設定", settings_path %></li>
					<li><%= link_to "登出", signout_path, method: "delete" %></li>
				<% else %>
					<li><%= link_to "登入", signin_path %></li>
					<li><%= link_to "註冊", signup_path %></li>	
				<% end %>

			</ul>
		</nav>
	</div>
</header>